<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:useDefaultMargins="true"
    app:alignmentMode="alignBounds"
    app:columnOrderPreserved="false"
    app:columnCount="4"
    >
    <TextView
        android:text="How do you feel?"
        android:textSize="16dip"
        app:layout_columnSpan="4"
        app:layout_gravity="left"
    />
    <TextView
        android:text="Say it!"
        app:layout_gravity="right"
    />
    <EditText
        android:id="@+id/edit_message"
        android:ems="1000"
    />
   
    <Button
        android:text="@string/grid_layout_4_broadcast_button"
        app:layout_row="5"
        app:layout_column="3"
        android:onClick="sendMessage"
    />    
    <Button
        android:text="@string/grid_layout_4_save_button"
        app:layout_row="6"
        app:layout_column="3"
        android:onClick="saveMessage"
    />    
    <Button
        android:text="@string/grid_layout_4_get_button"
        app:layout_row="7"
        app:layout_column="3"
        android:onClick="getMessage"
    />    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mccall_2401" />

</android.support.v7.widget.GridLayout>
